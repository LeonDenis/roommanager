<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.leonixsoftware.roommanager">

    <application
        android:allowBackup="true"
        android:icon="@drawable/room_manager_icon_144x144"
        android:label="@string/app_name"
        android:roundIcon="@drawable/room_manager_icon_144x144"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashApp" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:label="@string/title_activity_add"
            android:name=".SalaEditorActivity" />
    </application>

</manifest>