<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.leonixsoftware.roommanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="27" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/room_manager_icon_144x144"
        android:label="@string/app_name"
        android:roundIcon="@drawable/room_manager_icon_144x144"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="br.com.leonixsoftware.roommanager.Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.leonixsoftware.roommanager.SplashApp" />
        <activity
            android:name="br.com.leonixsoftware.roommanager.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="br.com.leonixsoftware.roommanager.SalaEditorActivity"
            android:label="@string/title_activity_add" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="br.com.leonixsoftware.roommanager.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>